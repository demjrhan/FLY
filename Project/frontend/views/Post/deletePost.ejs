<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/user.css">
    <link rel="stylesheet" href="/stylesheets/essentials.css">
</head>
<body>

<header>
    <div class="logo" onclick="mainPageLoggedIn(<%= loggedInUserId %>)"> FLY</div>
</header>


<div class="navigation-container">
    <nav>
        <ul>
            <li><a href="#" onclick="window.history.back()">Return</a></li>
            <li><a href="#" onclick="deletePostFromServer(<%= postId %>, <%= loggedInUserId %>)">Delete</a></li>
        </ul>
    </nav>
</div>
<div class="container"></div>

<script>

    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const postId = '<%= postId %>';
            const post = await fetchPostById(postId);
            if (post) {
                await deletePostPage(post);
            } else {
                console.error('No posts available to render.');
            }
        } catch (error) {
            console.error('Error fetching or rendering posts:', error);
        }
    });

</script>
<script src="/javascripts/user.js"></script>
</body>
</html>
