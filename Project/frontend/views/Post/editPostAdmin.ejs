<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/user.css">
    <link rel="stylesheet" href="/stylesheets/essentials.css">
</head>
<body>

<header>
    <div class="logo" onclick="mainPageLoggedIn(<%= loggedInUserId %>)"> FLY</div>
</header>


<div class="navigation-container">
    <nav>
        <ul>
            <li><a href="#" onclick="window.history.back()">Return</a></li>
            <li><a href="#" onclick="deleteImage()">Delete Image</a></li>
            <li><a href="#" onclick="editPostFromServer(<%= postId %>, <%= postOwnerId %>)">Save</a></li>
        </ul>
    </nav>
</div>
<div class="container"></div>

<script>

    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const postId = '<%= postId %>';
            const post = await fetchPostByPostIdAdmin(postId);
            if (post) {
                await editPostPage(post);
            } else {
                await renderNoPost();
            }
        } catch (error) {
            console.error('Error fetching or rendering posts:', error);
        }
    });

</script>
<script src="/javascripts/admin.js"></script>
</body>
</html>
