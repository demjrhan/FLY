<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Social Feed</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

<header class="header">
  <div class="user-info">
    Logged in as: <span id="logged-in-user">Guest</span>
  </div>
</header>

<div class="container"></div>

<script>
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const posts = await fetchPosts(); // Fetch posts
      if (Array.isArray(posts) && posts.length > 0) {
        renderPosts(posts); // Render posts
      } else {
        console.error('No posts available to render.');
      }
    } catch (error) {
      console.error('Error fetching or rendering posts:', error);
    }
  });

</script>
<script src="/javascripts/scripts.js"></script>

</body>
</html>