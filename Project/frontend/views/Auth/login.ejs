<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/guest.css">
    <link rel="stylesheet" href="/stylesheets/essentials.css">
</head>
<body>
<header>
    <div class="logo" onclick="mainPage()"> FLY</div>
    <div class="buttons">
        <button class="button" onclick="registerUserRequest()">Register</button>
    </div>
</header>
<div class="container">
    <form id="login-form" onsubmit="loginUserToServer(event)">
        <h2>Log In</h2>
        <div id="validation-error" style="color: red; margin-bottom: 10px;"></div>

        <label for="nickname">Nickname:</label>
        <input type="text" id="nickname" name="nickname">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password">

        <button type="submit" class="button">Log In</button>
    </form>
</div>

<script src="../javascripts/guest.js"></script>
<script src="../javascripts/user.js"></script>
</body>
</html>
